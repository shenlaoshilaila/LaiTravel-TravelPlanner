{
  "compilerOptions": {
    "target": "es6", // 编译成 ES6 语法
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true, // 允许 .js 文件一起编译
    "skipLibCheck": true, // 跳过类型定义检查（提高速度）
    "strict": true, // 启用严格模式（推荐）
    "forceConsistentCasingInFileNames": true,
    "noEmit": true, // 不生成 .js 文件（Next.js 自动处理）
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // 保留 JSX，交给 Next.js 编译
    "baseUrl": ".", // 路径别名根路径
    "paths": {
      "@/*": [
        "./*"
      ] // 允许 @/components 等别名引用
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
